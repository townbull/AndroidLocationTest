        android:textSize="20dp" />
	
	<TextView
        android:id="@+id/txtLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: -"
        android:textSize="20dp" />
	
	<TextView
	    android:id="@+id/address"
